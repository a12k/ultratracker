extends index

block content
  div#wrapper.divided
    section.banner.style1.orient-left.content-align-left.image-position-right.fullscreen.onload-image-fade-in.onload-content-fade-right
      div.content
        h1= racetitle
        p.major #{date}
        p.major #{location}
        if spots
          p There are #{spots}
        else
          p Data on remaining spots not available
        p #{closes}
        form(method='GET' action='/')
          button.big.wide.smooth-scroll-middle Back
      div.image
        img(src="images/banner2.jpeg" alt="")
